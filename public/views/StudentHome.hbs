<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <!-- Include Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Include Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="flex h-screen bg-white">

  <!-- Sidebar -->
  <student-sidebar-component></student-sidebar-component>

  <!-- Main Content Container -->
  <div class="flex-1 flex flex-col overflow-hidden bg-ashen border border-gray-400">

    <!-- Header -->
    <student-header-component></student-header-component>

    <!-- Main Content -->
    <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-4">

      <h1 class="heading text-2xl text-gray-700 mb-5 border-b border-gray-700 pb-3"> Our Courses</h1>
      <div class="flex space-x-4 mb-8">
        <!-- Course 1 -->
        <div class="w-1/3 max-w-sm bg-white px-6 pt-6 pb-2 rounded-xl shadow-lg transform hover:scale-105 transition duration-500">
          <div class="tutor flex items-center gap-4 mb-6">
            <img src="images/pic_8.jpg" alt="Tutor Image" class="h-20 w-20 rounded-full object-cover">
            <div class="info">
              <h3 class="text-xl text-blue-500">{{ userName }}</h3>
              <span class="text-gray-500">{{ courseDate1 }}</span>
            </div>
          </div>
          <div class="relative">
            <img src="images/course_3.jpg" alt="Course Thumbnail" class="w-full h-48 object-cover rounded-md">
            <span class="absolute top-4 left-4 bg-blue-500 text-white rounded-md p-2">{{ courseVideos1 }}</span>
          </div>
          <h1 class="mt-4 text-gray-800 text-2xl font-bold cursor-pointer">{{ courseTitle1 }}</h1>
          <div class="my-4">
            <div class="flex space-x-1 items-center">
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 mb-1.5" fill="none"
                  viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </span>
              <p>{{ courseDuration1 }}</p>
            </div>
            <div class="flex space-x-1 items-center">
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 mb-1.5" fill="none"
                  viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M16 4v12l-4-2-4 2V4M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </span>
              <p>{{ courseParts1 }}</p>
            </div>
            <a href="StudentViewCourse.html"
              class="mt-4 text-xl w-full text-white bg-blue-500 py-2 rounded-xl shadow-lg block text-center">
              View Playlist
            </a>
          </div>
        </div>
        
        <!-- Repeat the above code for Course 2 and Course 3, adjusting variable names accordingly -->
      </div>

      <!-- Row 2: Courses 4-6 -->
      <!-- Repeat the above code for Courses 4-6 -->

      <div class="more-btn text-center mt-8">
        <a href="StudentCourses.html"
          class="block w-full max-w-sm mx-auto text-white bg-blue-500 py-2 px-4 rounded-xl shadow-lg text-xl font-bold hover:bg-orange-600 focus:outline-none focus:shadow-outline-orange active:bg-orange-700 transition duration-150 ease-in-out">
          View All Courses
        </a>
      </div>

    </main>
    <!-- Footer -->
    <page-footer-component></page-footer-component>

  </div>

  <script src="PageAutomation.js"></script>
  <script src="TestFile.js"></script>
  <script type="module" src="/main.js"></script>

</body>

</html>
